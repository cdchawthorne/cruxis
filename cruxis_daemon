#!/usr/bin/env bash
function usage {
    echo "usage: $(basename $0) {start|stop|restart}" 1>&2
}

. /etc/rc.conf
. /etc/rc.d/functions

name=cruxis
erl_dir=/usr/lib/cruxis
daemon=cruxis_daemon
ARGS=

[[ -r "/etc/conf.d/${daemon}" ]] && . "/etc/conf.d/${daemon}"

PID="$(pgrep -f "-pa ${erl_dir} -noshell -run cruxis_daemon start_server$")"
function spawn-cruxis {
    erl -sname cruxis_daemon -pa ${erl_dir} -noshell -run cruxis_daemon start_server &> /dev/null < /dev/null &
    "${daemon_bin}" "$@" &> /dev/null < /dev/null &
    disown
}

case $1 in
    (start)
        stat_busy "Starting ${name}"
        if [[ -z "${PID}" ]]; then
            spawn-cruxis ${ARGS} &> /dev/null
            if [[ "$?" -eq 0 ]]; then
                add_daemon "${name}"
                stat_done
            else
                stat_fail
                exit 1
            fi
        fi
        ;;
    (stop)
        stat_busy "Stopping ${name}"
        if [[ -n "${PID}" ]]; then
            kill "${PID}" &> /dev/null
            if [[ "$?" -eq 0 ]]; then
                stat_done
            else
                stat_fail
                exit 1
            fi
        fi
        ;;
    (restart)
        "$0" stop
        sleep 1
        "$0" start
        ;;
    (*)
        usage
        exit 1
        ;;
esac
